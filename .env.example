# ====================================
# OpenChatAgent 统一环境配置文件
# ====================================

# ====================
# 全局配置
# ====================
NODE_ENV=development
LOG_LEVEL=info

# ====================
# chat-core 消息网关配置
# ====================
CHAT_CORE_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# 服务间通信配置
AI_SERVICE_URL=http://localhost:3002
SESSION_SERVICE_URL=http://localhost:3003
CHAT_SESSION_REDIS_URL=redis://localhost:6379

# ====================
# chat-ui 前端配置
# ====================
VITE_CHAT_CORE_WS_URL=ws://localhost:3001
VITE_CHAT_CORE_API_URL=http://localhost:3001/api

# ====================
# ai-service 阿里百炼配置
# ====================
DASHSCOPE_API_KEY=sk-your_api_key_here
KNOWLEDGE_BASE_CONFIGS=[{"id":"kb1","name":"FAQ知识库","priority":1},{"id":"kb2","name":"产品规格库","priority":2}]
MAX_CONTEXT_MESSAGES=10
RETRY_DELAY_MS=1000
DEFAULT_MODEL=qwen-plus
AI_SERVICE_PORT=3002

# ====================
# chat-session Redis会话配置
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 会话配置
DEFAULT_SESSION_TTL=86400  # 24小时 (秒)
MAX_MESSAGE_HISTORY=100    # 最大消息历史数量
CLEANUP_INTERVAL=3600      # 清理间隔 (秒)

# 性能配置
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000     # 重试延迟 (毫秒)
CHAT_SESSION_PORT=3003

# ====================
# 开发环境配置
# ====================
# 是否启用热重载
DEV_HOT_RELOAD=true
# 并发启动延迟（避免端口冲突）
STARTUP_DELAY_MS=2000 